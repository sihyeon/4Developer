<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/signup_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.project4D.fdpay.SignUpActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:src="@drawable/banner_black_and_gold" />


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TableRow
                android:layout_margin="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="성별"
                    android:textColor="#330000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/addpointcard_usergendermale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/addpointcard_usergenderfemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여"
                        android:textSize="18sp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_margin="5dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거주"
                    android:textColor="#330000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/addpointcard_userdomastic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내국인"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/addpointcard_userforeigner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="외국인"
                        android:textSize="18sp" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_margin="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"

                    android:textColor="#330000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/signup_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"

                    android:ems="10"
                    android:paddingLeft="10dp">

                    <requestFocus />
                </EditText>

            </TableRow>

            <TableRow
                android:layout_margin="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PASSWORD"

                    android:textColor="#330000"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"

                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />



            </TableRow>

            <TableRow
                android:layout_margin="5dp"
                >    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"

                android:textColor="#330000"
                android:textSize="20sp" />

                <EditText
                    android:id="@+id/signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"

                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp" />


            </TableRow>

            <TableRow
                android:layout_margin="5dp"
                >       <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE"

                android:textColor="#330000"
                android:textSize="20sp" />

                <EditText
                    android:id="@+id/signup_phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"

                    android:ems="10"
                    android:inputType="phone"
                    android:paddingLeft="10dp" />

            </TableRow>

            <TableRow
                android:layout_margin="5dp"
                >  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"

                android:textColor="#330000"
                android:textSize="20sp" />

                <EditText
                    android:id="@+id/signup_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"

                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="10dp" />

            </TableRow>

            <TableRow
                android:layout_margin="5dp"
                ><TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호"

                android:textColor="#330000"
                android:textSize="20sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round"

                    android:ems="10"
                    android:paddingLeft="10dp" />

            </TableRow>


        </TableLayout>


    <!--    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight=".01"
                android:gravity="left"
                android:orientation="vertical">









            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".99"
                android:orientation="vertical">

















            </LinearLayout>

        </LinearLayout>-->

        <Button
            android:id="@+id/signup_signupbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/com_rounded_corner"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>