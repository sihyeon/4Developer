<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project4D.fdpay.AddPointCardInfoActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffc300"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/add_credit01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="포인트 카드 선택"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Spinner
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffdfb0"
        android:id="@+id/addpointcard_cardtype" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00ffffff"
        android:src="@drawable/down_arrow"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/addpointcard_submit"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/com_rounded_corner"
        android:text="확인"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        />


</LinearLayout>
